@model WholesomeMVC.Models.RegisterViewModel
@{
	ViewBag.Title = "Register";
}

<section class="row page-header">
	<section class="text-center">
		<h2>@ViewBag.Title</h2>
	</section>
</section>

<section class="row">
	<section class="col-sm-offset-4 col-sm-4">
		<h4>Create a new account</h4>
		@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "", role = "form" }))
		{
			@Html.AntiForgeryToken()
			@Html.ValidationSummary("", new { @class = "text-danger" })
			<div class="form-group">
				@Html.LabelFor(m => m.Email, new { @class = "control-label" })
				<div>
					@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(m => m.UserName, new { @class = "control-label" })
				<div>
					@Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(m => m.Password, new { @class = "control-label" })
				<div>
					@Html.PasswordFor(m => m.Password, new { @class = "form-control" })
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
				<div>
					@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
				</div>
			</div>

			<div class="form-group">
				@Html.Label("User Role", new { @class = "control-label" })
				<div>
					@*@Html.DropDownList("Name")*@
					@Html.DropDownList("UserRoles", (SelectList)ViewBag.Name, String.Empty, new { @class = "form-control" })
				</div>
			</div>

			<div class="form-group">
				<hr />
				<input type="submit" class="btn btn-success btn-lg btn-block" value="Register" />
			</div>
		}
	</section>
</section>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}  